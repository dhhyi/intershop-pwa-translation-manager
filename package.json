{
  "name": "pwa-translation-manager",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "ngcc": "ngcc --first-only",
    "prepare": "husky install && npm run copy-files",
    "copy-files": "copy-files-from-to",
    "format": "prettier --write .",
    "lint": "ng lint",
    "build": "npm-run-all --parallel build:*",
    "build:fe": "ng build",
    "build:be": "webpack",
    "start": "npm-run-all --parallel start:*",
    "start:fe": "ng serve --open",
    "start:be": "cross-env DB_LOCATION=. onchange -ik server.mjs -- node server.mjs",
    "start:be:testing": "cross-env PORT=8001 DB_LOCATION=node_modules/.test onchange -ik server.mjs -- node server.mjs",
    "test": "npm-run-all test:*",
    "test:be": "cross-env PORT=8001 SILENT=true start-server-and-test 'node server.mjs' 8001 'jest -i --testRegex \"server.*\\.test\\.js\"'",
    "test:fe": "jest --testRegex \".*\\.test\\.ts\"",
    "docker": "onchange -i -k '**' --exclude-path .gitignore -- docker compose up --build"
  },
  "copyFiles": [
    {
      "from": "https://raw.githubusercontent.com/intershop/intershop-pwa/develop/src/app/core/utils/translate/pwa-translate-compiler.ts",
      "to": "src/ish-pwa/pwa-translate-compiler.ts"
    },
    {
      "from": "https://raw.githubusercontent.com/intershop/intershop-pwa/develop/src/app/core/utils/translate/translations.type.ts",
      "to": "src/ish-pwa/translations.type.ts"
    },
    {
      "from": "config-example.json",
      "to": {
        "default": {
          "dest": "config.json"
        },
        "production": {
          "skip": true
        }
      }
    },
    {
      "from": "db-example.json",
      "to": {
        "default": {
          "dest": "db.json"
        },
        "production": {
          "skip": true
        }
      }
    }
  ],
  "copyFilesSettings": {
    "whenFileExists": "notify-about-available-change"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/build-angular": "~13.1.4",
    "@angular/animations": "~13.1.3",
    "@angular/cdk": "~13.1.3",
    "@angular/cli": "~13.1.4",
    "@angular/common": "~13.1.3",
    "@angular/compiler": "~13.1.3",
    "@angular/compiler-cli": "~13.1.3",
    "@angular/core": "~13.1.3",
    "@angular/forms": "~13.1.3",
    "@angular/material": "~13.1.3",
    "@angular/platform-browser": "~13.1.3",
    "@angular/platform-browser-dynamic": "~13.1.3",
    "@angular/router": "~13.1.3",
    "@fortawesome/angular-fontawesome": "^0.10.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@google-cloud/translate": "^6.3.1",
    "@ngx-translate/core": "^14.0.0",
    "@rx-angular/state": "^1.4.6",
    "@types/lodash-es": "^4.17.5",
    "@types/node": "^14.17.20",
    "copy-files-from-to": "^3.2.1",
    "cors": "^2.8.5",
    "csv": "^6.0.5",
    "escape-string-regexp": "^5.0.0",
    "express": "^4.17.1",
    "lodash-es": "^4.17.21",
    "lowdb": "^3.0.0",
    "ngx-toastr": "^14.1.3",
    "rxjs": "~7.5.2",
    "tslib": "^2.1.0",
    "typescript": "^4.5.5",
    "webpack-cli": "^4.9.2",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-eslint/builder": "13.0.1",
    "@angular-eslint/eslint-plugin": "13.0.1",
    "@angular-eslint/eslint-plugin-template": "13.0.1",
    "@angular-eslint/schematics": "13.0.1",
    "@angular-eslint/template-parser": "13.0.1",
    "@prettier/plugin-xml": "^1.1.0",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "5.10.1",
    "@typescript-eslint/parser": "5.10.1",
    "axios": "^0.25.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.2.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.2",
    "jest": "^27.4.7",
    "jest-extended": "^1.2.0",
    "lint-staged": "^12.3.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^2.3.2",
    "start-server-and-test": "^1.14.0",
    "ts-jest": "^27.1.3"
  }
}
